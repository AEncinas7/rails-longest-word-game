<div class="container">

    <h1>New Game</h1>
    <ul id="letters">
    <% @letters.each do |letter| %>
        <li><%= letter %></li>
    <% end %>
    </ul>

    <form action="/score">
    <div class="form-group">
        <label for="word-input">What is the longest word you can find?</label>
        <div id="input">
        <input type="text" name="input" class="form-control" id="word-input">
        <input type="hidden">
        <button type="submit" class="btn btn-outline-secondary mb-2">Play</button>
        </div>
    </div>
    <%= hidden_field_tag :grid, @letters %>
    </form>
    
  </div>