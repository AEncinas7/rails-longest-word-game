<div class="container">
  <h1>Result</h1>
  <% if @word_array.all? { |letter| @word_array.count(letter) <= @grid.count(letter) } %>
    <% if @word["found"] %>
      <p><strong>Congratulations! </strong><%= @input.upcase %> is a valid English word!</p>
    <% else %>  
      <p>Sorry but <strong><%= @input.upcase %></strong> does not seem to be a valid English word...</p>
    <% end %>
  <% else %>
    <p>Sorry but <strong><%= @input.upcase %></strong> can't be build out of <%= params[:grid].gsub(" ", ", ") %></p>
  <% end %>
  <%= link_to "Play Again", "/new" %>
</div>